" Keep 1000 items in the history.
set history=1000

" Show the cursor position.
set ruler

" Show incomplete commands.
set showcmd

" Show a menu when using tab completion.
set wildmenu

" 
set scrolloff=5

set hlsearch
set incsearch
set ignorecase
set smartcase

" Turn on line numbering
set number

set backup

set lbr

" Set auto indent.
set ai
" Set smart indent.
set si

" Adapt font color to dark backgroud.
set bg=dark


" map KEY KEYSTROKES

nnoremap <SPACE> <Nop>
let mapleader=" "

" map jk to escape
:imap jk <Esc>
